<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/star_menu">
    <!--android:background="@drawable/starMenu.png">-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingsButton"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_settings_white_36dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:layout_marginTop="50dp"
        android:src="@drawable/spacewartitle"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/playBtn"
        android:id="@+id/jouerBtn"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="85dp"
        android:textColor="@color/white"
        android:background="@drawable/menu_button"
        android:padding="10dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/highScore"
        android:id="@+id/score"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/menu_button"
        android:padding="10dp"
        android:textStyle="bold" />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/highScore"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:background="@drawable/menu_button"
        android:padding="10dp"
        android:textStyle="bold" />
</LinearLayout>